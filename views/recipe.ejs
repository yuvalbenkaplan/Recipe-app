<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= recipe.name %></h2>
      <img class="img-fluid" src="<%= recipe.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/recipe/favoriteRecipe/<%= recipe.id %>" method="POST"
        >
          <button class="btn btn-primary fa fa-star" type="submit"></button>
        </form>
        
        <%if(recipe.user == user.id){ %>
        <form
          action="/recipe/deleteRecipe/<%= recipe.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p>Prep time: <%= recipe.prepTime%></p>
      <p>Cooking time: <%= recipe.cookTime%></p>
      <p>Vegetarian: <%= recipe.vegetarian%></p>
      <p>Vegan: <%= recipe.vegan%></p>
    </div>
    <div class="col-3 mt-5">
      <p><%= recipe.ingredients %></p>
      <p><%= recipe.instructions %></p>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
